<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Dock.Model.Mvvm.Controls;assembly=Dock.Model.Mvvm">

    <!-- Editor Component Styles -->
    <!-- Currently empty, but required for Avalonia View discovery -->
    <!-- Fix focus borders for documents -->
    <!-- Target borders around focused content areas -->
    <Style Selector="ContentControl Border:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}" />
    </Style>
    
    <Style Selector="Border:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}" />
    </Style>
    
    <!-- Target any focused visual elements in documents -->
    <Style Selector="UserControl:focus Border">
        <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}" />
    </Style>
</Styles>
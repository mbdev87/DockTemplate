<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:DockComponent.ErrorList.ViewModels"
             xmlns:local="using:DockComponent.ErrorList.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="300"
             x:Class="DockComponent.ErrorList.Views.ErrorListView"
             x:DataType="vm:ErrorListViewModel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />    <!-- Toolbar -->
            <RowDefinition Height="*" />     <!-- DataGrid -->
            <RowDefinition Height="24" />    <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="0,0,0,1">
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Clear Button -->
                <Button Grid.Column="0"
                        Command="{Binding ClearErrorsCommand}"
                        ToolTip.Tip="Clear Error List"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="0,0,4,0"
                        Height="32"
                        Width="32"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        FontFamily="avares://DockTemplate/Assets/FontAwesome-Solid.ttf#Font Awesome 6 Free"
                        FontSize="11"
                        Content="&#xf2ed;" />

                <!-- Severity Filter -->
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding SeverityLevels}"
                          SelectedItem="{Binding SelectedSeverity}"
                          Width="70"
                          Height="32"
                          VerticalAlignment="Center"
                          Margin="0,0,4,0"
                          FontSize="10" />

                <!-- Search Filter -->
                <TextBox Grid.Column="2"
                         Text="{Binding FilterText}"
                         Watermark="Filter errors..."
                         FontSize="10"
                         Height="32"
                         VerticalAlignment="Center"
                         Margin="0,0,4,0"
                         VerticalContentAlignment="Center" />

                <!-- Test Button -->
                <Button Grid.Column="3"
                        ToolTip.Tip="Generate Test Errors"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="0,0,4,0"
                        Height="32"
                        Width="32"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        FontSize="11"
                        Content="⚡"
                        x:Name="TestErrorsButton" />

                <!-- Summary -->
                <TextBlock Grid.Column="4" Text="{Binding Summary}" FontSize="10" 
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextForegroundColor}"
                           Margin="4,0,0,0" />
            </Grid>
        </Border>

        <!-- Error DataGrid -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Errors}" SelectedItem="{Binding SelectedError}"
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column" IsReadOnly="True"
                  BorderThickness="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                  VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                  Background="{DynamicResource EditorBackground}" FontSize="11" RowHeight="22"
                  Foreground="{DynamicResource TextForegroundColor}" CanUserSortColumns="True"
                  CanUserReorderColumns="True" CanUserResizeColumns="True"
                  x:Name="ErrorDataGrid">

            <DataGrid.Styles>
                <Style Selector="DataGridRow">
                    <Setter Property="Background" Value="{DynamicResource TextControlBackground}"/>
                </Style>
                <Style Selector="DataGridRow:nth-child(2n)">
                    <Setter Property="Background" Value="{DynamicResource EditorBackground}"/>
                </Style>
                <Style Selector="DataGridRow:pointerover">
                    <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}"/>
                </Style>
                <Style Selector="DataGridRow:selected">
                    <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListMediumBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                </Style>
                <Style Selector="DataGridRow:selected DataGridCell TextBlock">
                    <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                </Style>
                <Style Selector="DataGridColumnHeader">
                    <Setter Property="Background" Value="{DynamicResource TextControlBackground}"/>
                    <Setter Property="Foreground" Value="{DynamicResource TextForegroundColor}"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="11"/>
                    <Setter Property="Padding" Value="8,4"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource TextControlBorderBrush}"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                </Style>
                <Style Selector="DataGridCell">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="8,2"/>
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
                <Style Selector="DataGridCell TextBlock">
                    <Setter Property="Foreground" Value="{DynamicResource TextForegroundColor}"/>
                    <Setter Property="FontSize" Value="11"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <!-- Error row styling -->
                <Style Selector="DataGridRow">
                    <Setter Property="Background" Value="{DynamicResource TextControlBackground}"/>
                </Style>
            </DataGrid.Styles>

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="" Width="40" CanUserReorder="False" CanUserResize="True" CanUserSort="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" FontWeight="Bold">
                                <TextBlock.Text>
                                    <Binding Path="Level">
                                        <Binding.Converter>
                                            <local:ErrorLevelToIconConverter />
                                        </Binding.Converter>
                                    </Binding>
                                </TextBlock.Text>
                                <TextBlock.Foreground>
                                    <Binding Path="Level">
                                        <Binding.Converter>
                                            <local:ErrorLevelToColorConverter />
                                        </Binding.Converter>
                                    </Binding>
                                </TextBlock.Foreground>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Description" Width="300" Binding="{Binding Message}" />
                <DataGridTextColumn Header="Source" Width="250" Binding="{Binding Code}" />
                <DataGridTextColumn Header="Source" Width="150" Binding="{Binding Source}" />
                <DataGridTextColumn Header="Line" Width="50" Binding="{Binding Line}" />
                <DataGridTextColumn Header="Time" Width="80" Binding="{Binding FormattedTimestamp}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Empty State -->
        <Border Grid.Row="1" Background="{DynamicResource EditorBackground}" 
                IsVisible="{Binding !Errors.Count}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="✅" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10" />
                <TextBlock Text="No errors found!" FontSize="14" 
                           Foreground="{DynamicResource TextForegroundColor}" HorizontalAlignment="Center" />
                <TextBlock Text="Your code is clean and ready to go!" FontSize="12" 
                           Foreground="{DynamicResource SystemAccentColor}" HorizontalAlignment="Center" Margin="0,5,0,0" />
            </StackPanel>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource TextControlBackground}" 
                BorderBrush="{DynamicResource TextControlBorderBrush}" BorderThickness="0,1,0,0"
                Padding="8,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding Summary}" FontSize="10" 
                           VerticalAlignment="Center" Foreground="{DynamicResource TextForegroundColor}" />

                <TextBlock Grid.Column="1" Text="{Binding TotalCount, StringFormat='{}{0} items'}" 
                           FontSize="10" VerticalAlignment="Center" 
                           Foreground="{DynamicResource TextForegroundColor}" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
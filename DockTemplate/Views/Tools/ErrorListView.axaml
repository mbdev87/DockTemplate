<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:DockTemplate.ViewModels.Tools"
             xmlns:services="using:DockTemplate.Services"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="300"
             x:Class="DockTemplate.Views.Tools.ErrorListView"
             x:DataType="vm:ErrorListViewModel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />    <!-- Toolbar -->
            <RowDefinition Height="*" />     <!-- DataGrid -->
            <RowDefinition Height="24" />    <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="{DynamicResource TextControlBackground}" 
                BorderBrush="{DynamicResource TextControlBorderBrush}" BorderThickness="0,0,0,1" 
                Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ›" FontSize="16" Margin="0,0,8,0" />
                    <ComboBox Name="SeverityFilter" SelectedItem="{Binding SelectedSeverity}" 
                              ItemsSource="{Binding SeverityLevels}" Width="80" Height="24" FontSize="11" />
                    <TextBox Name="FilterTextBox" Text="{Binding FilterText}" Watermark="Filter errors..." 
                             Width="150" Height="24" FontSize="11" Margin="8,0,0,0" />
                </StackPanel>

                <TextBlock Grid.Column="1" Text="{Binding Summary}" FontSize="11" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           Foreground="{DynamicResource TextForegroundColor}" />

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="ðŸ—‘ï¸" ToolTip.Tip="Clear All" Command="{Binding ClearErrorsCommand}" 
                            Width="24" Height="24" FontSize="10" Padding="2" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Error DataGrid -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Errors}" SelectedItem="{Binding SelectedError}"
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column" IsReadOnly="True"
                  BorderThickness="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                  VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                  Background="{DynamicResource EditorBackground}" FontSize="11" RowHeight="22"
                  Foreground="{DynamicResource TextForegroundColor}" CanUserSortColumns="True"
                  x:Name="ErrorDataGrid">

            <DataGrid.Styles>
                <Style Selector="DataGridRow">
                    <Setter Property="Background" Value="{DynamicResource TextControlBackground}"/>
                </Style>
                <Style Selector="DataGridRow:nth-child(2n)">
                    <Setter Property="Background" Value="{DynamicResource EditorBackground}"/>
                </Style>
                <Style Selector="DataGridRow:pointerover">
                    <Setter Property="Background" Value="{DynamicResource SystemAccentColorLight3}"/>
                </Style>
                <Style Selector="DataGridRow:selected">
                    <Setter Property="Background" Value="{DynamicResource SystemAccentColorLight2}"/>
                </Style>
                <Style Selector="DataGridColumnHeader">
                    <Setter Property="Background" Value="{DynamicResource TextControlBackground}"/>
                    <Setter Property="Foreground" Value="{DynamicResource TextForegroundColor}"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="11"/>
                    <Setter Property="Padding" Value="8,4"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource TextControlBorderBrush}"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                </Style>
                <Style Selector="DataGridCell">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="8,2"/>
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
                <Style Selector="DataGridCell TextBlock">
                    <Setter Property="Foreground" Value="{DynamicResource TextForegroundColor}"/>
                    <Setter Property="FontSize" Value="11"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <!-- Error row styling -->
                <Style Selector="DataGridRow">
                    <Setter Property="Background" Value="{DynamicResource TextControlBackground}"/>
                </Style>
            </DataGrid.Styles>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Level" Width="60" Binding="{Binding Level}" />
                <DataGridTextColumn Header="Code" Width="80" Binding="{Binding Exception}" />
                <DataGridTextColumn Header="Description" Width="300" Binding="{Binding Message}" />
                <DataGridTextColumn Header="Source" Width="200" Binding="{Binding Source}" />
                <DataGridTextColumn Header="Line" Width="60" Binding="{Binding Line}" />
                <DataGridTextColumn Header="Column" Width="60" Binding="{Binding Column}" />
                <DataGridTextColumn Header="Time" Width="80" Binding="{Binding FormattedTimestamp}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Empty State -->
        <Border Grid.Row="1" Background="{DynamicResource EditorBackground}" 
                IsVisible="{Binding !Errors.Count}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="âœ…" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10" />
                <TextBlock Text="No errors found!" FontSize="14" 
                           Foreground="{DynamicResource TextForegroundColor}" HorizontalAlignment="Center" />
                <TextBlock Text="Your code is clean and ready to go!" FontSize="12" 
                           Foreground="{DynamicResource SystemAccentColor}" HorizontalAlignment="Center" Margin="0,5,0,0" />
            </StackPanel>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource TextControlBackground}" 
                BorderBrush="{DynamicResource TextControlBorderBrush}" BorderThickness="0,1,0,0"
                Padding="8,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding Summary}" FontSize="10" 
                           VerticalAlignment="Center" Foreground="{DynamicResource TextForegroundColor}" />

                <TextBlock Grid.Column="1" Text="{Binding TotalCount, StringFormat='{}{0} items'}" 
                           FontSize="10" VerticalAlignment="Center" 
                           Foreground="{DynamicResource TextForegroundColor}" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
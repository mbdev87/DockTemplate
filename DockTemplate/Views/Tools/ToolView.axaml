<UserControl x:Class="DockTemplate.Views.Tools.ToolView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:DockTemplate.ViewModels.Tools"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="400"
             x:DataType="vm:ToolViewModel" x:CompileBindings="True">
  <Border BorderBrush="{DynamicResource SystemBaseMediumColorBrush}" 
          BorderThickness="1" 
          Background="{DynamicResource SystemChromeLowColorBrush}"
          CornerRadius="4"
          Padding="8">
    <StackPanel>
      <TextBlock Text="{Binding Title, FallbackValue='Tool Panel'}" FontWeight="Bold" Margin="0,0,0,8" FontSize="14"/>
      <TextBlock Text="{Binding Context, FallbackValue='Tool content goes here...'}" TextWrapping="Wrap" />
    </StackPanel>
  </Border>
</UserControl>
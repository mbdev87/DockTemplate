<UserControl x:Class="DockTemplate.Views.Models.PropertiesModelView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:m="using:DockTemplate.Models.Tools"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="400"
             x:DataType="m:PropertiesModel" x:CompileBindings="True">
  <Border BorderBrush="{DynamicResource SystemBaseMediumColorBrush}" 
          BorderThickness="1" 
          Background="{DynamicResource SystemChromeLowColorBrush}"
          Padding="8">
    <StackPanel>
      <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,0,0,8" FontSize="14"/>
      <ScrollViewer>
        <TextBlock Text="{Binding Content}" TextWrapping="Wrap" FontFamily="Segoe UI,Arial,sans-serif"/>
      </ScrollViewer>
    </StackPanel>
  </Border>
</UserControl>
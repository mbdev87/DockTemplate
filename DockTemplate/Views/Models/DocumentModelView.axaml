<UserControl x:Class="DockTemplate.Views.Models.DocumentModelView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:m="using:DockTemplate.Models.Documents"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:DataType="m:DocumentModel" x:CompileBindings="True">
  <Border BorderBrush="{DynamicResource SystemBaseMediumColorBrush}" 
          BorderThickness="1" 
          Background="{DynamicResource SystemChromeLowColorBrush}"
          Padding="8">
    <StackPanel>
      <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,0,0,8" FontSize="14"/>
      <TextBox Text="{Binding Content}" 
               AcceptsReturn="True" 
               TextWrapping="Wrap" 
               MinHeight="300"
               Background="Transparent"
               BorderThickness="0"
               FontFamily="Consolas,Monaco,monospace" />
    </StackPanel>
  </Border>
</UserControl>